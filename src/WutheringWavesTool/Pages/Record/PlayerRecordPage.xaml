<Page
    x:Class="WutheringWavesTool.Pages.Record.PlayerRecordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:Waves.Api.Models.Enums"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:WutheringWavesTool.Pages.Record"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:WutheringWavesTool.Controls"
    xmlns:wuc="using:WinUICommunity"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:ImageEx
            Grid.Row="2"
            Canvas.ZIndex="-1"
            Source="ms-appx:///Assets/Images/keaita.jpg"
            Stretch="UniformToFill"
            Visibility="Visible" />
        <Border Grid.RowSpan="2" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" />
        <ui:TitleBar
            x:Name="titleBar"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall">
            <ui:TitleBar.Header>
                <MenuBar>
                    <MenuBarItem Title="菜单">
                        <MenuFlyoutItem Command="{x:Bind ViewModel.ShowInputRecordCommand}" Text="导入抽卡">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B5;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuBarItem>
                </MenuBar>
            </ui:TitleBar.Header>
            <ui:TitleBar.Footer>
                <Border
                    Width="150"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent" />
            </ui:TitleBar.Footer>
        </ui:TitleBar>
        <Grid x:Name="grid" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ComboBox
                Width="150"
                Margin="0,-40,50,0"
                HorizontalAlignment="Right"
                IsEnabled="{x:Bind ViewModel.IsLoadRecord, Mode=OneWay}"
                ItemsSource="{x:Bind ViewModel.CardPools, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="enum:CardPoolType">
                        <TextBlock Text="{x:Bind Converter={StaticResource CardPoolTypeConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Grid Margin="10" CornerRadius="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid
                        Margin="0,0,2.5,0"
                        CornerRadius="5"
                        Style="{ThemeResource GridPanel}">
                        <StackPanel Margin="10" Orientation="Vertical">
                            <TextBlock Text="UID:" />
                            <TextBlock Margin="0,5,0,0" Text="样本创建日期:" />
                            <TextBlock Margin="0,5,0,0" Text="数据量：" />
                        </StackPanel>
                    </Grid>
                    <Grid
                        Grid.Column="1"
                        Margin="2.5,0,0,0"
                        CornerRadius="5"
                        Style="{ThemeResource GridPanel}">
                        <StackPanel Margin="10" Orientation="Vertical">
                            <TextBlock>
                                <Run Text="总抽卡数量:" />
                                <Run Text="{x:Bind ViewModel.AllCount, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0">
                                <Run Text="平均活动:" />
                                <Run Text="{x:Bind ViewModel.ActivityAvg, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0">
                                <Run Text="平均常驻：" />
                                <Run Text="{x:Bind ViewModel.ResidentAvg, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{ThemeResource GridPanel}">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="{x:Bind ViewModel.Guaranteed, Converter={StaticResource RecordColorConverter}}">
                                <Run Text="{x:Bind ViewModel.Guaranteed, Mode=OneWay}" />
                                <Run Text="%" />
                            </TextBlock>
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="小保底歪率" />
                        </Grid>
                    </Grid>
                    <Grid
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{ThemeResource GridPanel}">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="#FFD700"
                                Text="{x:Bind ViewModel.ScoreValue, Mode=OneWay}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="样本分数" />
                        </Grid>
                    </Grid>
                    <Grid
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{ThemeResource GridPanel}">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="#FFD700"
                                Text="{x:Bind ViewModel.StarAvg, Mode=OneWay}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="平均5星" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Frame
                x:Name="frame"
                Grid.Row="1"
                Margin="0,0,0,0"
                Loaded="frame_Loaded"
                Visibility="{x:Bind ViewModel.IsLoadRecord, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Border
                x:Name="border"
                Grid.RowSpan="2"
                Width="200"
                Height="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsLoadRecord, Mode=OneWay, Converter={StaticResource BoolReversalConvert}}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <Image
                        Width="70"
                        Height="70"
                        Source="ms-appx:///Assets/Images/Error.gif"
                        Stretch="UniformToFill" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="请输入一个抽卡记录" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
